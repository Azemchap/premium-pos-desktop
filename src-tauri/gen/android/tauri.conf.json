{
    "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
    "productName": "ZTAD POS",
    "version": "1.0.0",
    "identifier": "com.ztad.pos",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "ZTAD POS",
                "width": 800,
                "height": 600,
                "center": true,
                "visible": true
            }
        ],
        "security": {
            "csp": "default-src 'self' tauri: asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: asset: http://asset.localhost blob:",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$APPDATA/**",
                    "$APPDATA/logos/**"
                ]
            }
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "fs": {
            "scope": [
                "$APPDATA/**"
            ]
        },
        "shell": {
            "open": true
        }
    }
}