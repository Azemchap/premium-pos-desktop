{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "productName": "ZTAD POS",
    "version": "0.1.0",
    "identifier": "com.ztadpos.app",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "ZTAD POS",
                "width": 1400,
                "height": 900,
                "minWidth": 1200,
                "minHeight": 800,
                "center": true,
                "decorations": true,
                "transparent": false,
                "alwaysOnTop": false,
                "skipTaskbar": false,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "category": "Business",
        "copyright": "Â© 2024 ZTAD POS",
        "shortDescription": "ZTAD POS System",
        "longDescription": "ZTAD Point of Sale and Inventory Management System for retail locations",
        "targets": "all",
        "externalBin": [],
        "resources": [],
        "icon": [
            "icons/icon.png"
        ]
    }
}