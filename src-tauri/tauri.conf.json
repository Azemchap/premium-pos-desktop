{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "productName": "Premium POS",
    "version": "0.1.0",
    "identifier": "com.premiumpos.app",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Premium POS",
                "width": 1200,
                "height": 800,
                "minWidth": 1000,
                "minHeight": 700
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "category": "Business",
        "copyright": "",
        "shortDescription": "Premium POS System",
        "longDescription": "Premium Point of Sale and Inventory Management System for retail locations",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "targets": "all",
        "externalBin": [],
        "resources": []
    },
    "plugins": {
        "sql": {
            "preload": [
                "sqlite:pos.db"
            ]
        }
    }
}