{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "productName": "QorBooks",
    "version": "0.1.0",
    "identifier": "com.qorbooks.app",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "QorBooks",
                "width": 1400,
                "height": 900,
                "minWidth": 1200,
                "minHeight": 800,
                "center": true,
                "decorations": true,
                "transparent": false,
                "alwaysOnTop": false,
                "skipTaskbar": false,
                "visible": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$APPDATA/**",
                    "$APPDATA/logos/**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "category": "Business",
        "copyright": " 2024 QorBooks",
        "shortDescription": "QorBooks Business Management System",
        "longDescription": "QorBooks - Comprehensive Point of Sale and Business Management System for retail locations",
        "targets": "all",
        "externalBin": [],
        "resources": [],
        "icon": [
            "icons/icon.png"
        ]
    }
}